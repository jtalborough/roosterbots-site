# Environment Variables for Portainer Stack
# Copy these to Portainer when creating/updating your stack

# Cloudflare Tunnel (REQUIRED)
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Stripe Configuration (REQUIRED)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_actual_webhook_secret

# Application Configuration (REQUIRED)
BASE_URL=https://roosterbots.designbuildautomate.io
ALLOWED_ORIGINS=https://roosterbots.designbuildautomate.io

# Node Configuration (Optional - has defaults)
NODE_ENV=production
PORT=3000
